{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/index.ts", "src/config/**/*", "src/routes/books.ts"],
  "exclude": ["node_modules", "dist", "src/routes/apps.ts", "src/routes/auth.ts", "src/routes/blog.ts", "src/routes/projects.ts", "src/routes/settings.ts", "src/routes/youtube.ts", "src/middleware/**/*"]
}

